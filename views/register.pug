extends layout

block content
  form.form-register.text-center(action='/register', method='post')
    i.fas.fa-user-plus.fa-2x.mb-3.text-muted
    h3.mb-3.head-font Register
    label.sr-only(for='inputName') Name or Pseudonym
    input#inputName.form-control(type='text', placeholder='Name or Pseudonym', required='', autofocus='', name="inputName")
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name="inputEmail")
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password', placeholder='Password', required='', name="inputPassword")
    label.sr-only(for='inputPasswordConf') Password
    input#inputPasswordConf.form-control(type='password', placeholder='Confirm password', required='', name="inputPasswordConf")
    button.btn.btn-lg.btn-dark.btn-block.body-font(type='submit') Submit