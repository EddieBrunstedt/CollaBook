.container.mb-3
  header.blog-header.py-3
    .row.justify-content-between.align-items-center
      .col-sm-4.text-center.text-sm-left.mb-3.mb-sm-0
        a.blog-header-logo.text-dark(href='/')= h.title
      .col-sm-8.text-center.text-sm-left.d-flex.justify-content-center.align-items-center.mt-2
        if user
          .ml-sm-auto
            if currentUrl === '/'
              a.mr-1.active-navbar-text(href='/') Dasboard
            else
              a.mr-1.inactive-navbar-text(href='/') Dasboard
            span.inactive-navbar |
            |
            |
            if currentUrl === '/user/' + user.id
              a.mr-1.active-navbar-text(href='/user/' + user.id) Profile
            else
              a.mr-1.inactive-navbar-text(href='/user/' + user.id) Profile
            span.text-muted |
            |
            |
            if currentUrl === '/followed-users'
              a.mr-1.active-navbar-text(href='/followed-users') People
            else
              a.mr-1.inactive-navbar-text(href='/followed-users') People
            span.text-muted |
            |
            |
            a#logout-navbar-link.mr-1(href='/logout') Log out
        else
          .ml-sm-auto
            if currentUrl === '/register'
              a.mr-1.active-navbar-text(href='/register') Register
            else
              a.mr-1.inactive-navbar-text(href='/register') Register
            span.text-muted |
              |
              |
            if currentUrl === '/login'
              a.mr-1.active-navbar-text(href='/login') Log in
            else
              a.mr-1.inactive-navbar-text(href='/login') Log in


