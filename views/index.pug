extends layout

block content
  table.u-full-width
    thead
      tr
        th Book title
        th Owner
        th Collaborator
        th Created
        th Published/Private
        th Completed
    tbody
      each book in books
        tr
          td
            a(href='/book/' + book.id)= book.title
          td
            a(href='/user/' + book.owner.id)= book.owner.name
          td
            a(href='/user/' + book.collaborator.id)= book.collaborator.name
          td= h.moment(book.createdDate).calendar()
          if book.public
            td Published
          else
            td Private
          td= book.completed