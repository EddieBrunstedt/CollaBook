extends layout

block content
  .container
    section
      h3 Books where you are next in turn
      .card-deck
        .card
          i.fas.fa-book.card-img-top
          .card-body
            h5.card-title Card title
            p.card-text
              | This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
          .card-footer
            small.text-muted Last updated 3 mins ago
        .card
          img.card-img-top(src='http://via.placeholder.com/384x180', alt='Card image cap')
          .card-body
            h5.card-title Card title
            p.card-text This card has supporting text below as a natural lead-in to additional content.
          .card-footer
