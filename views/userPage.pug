extends layout

block content
  table.u-full-width
    thead
      tr
        th Name
        th Email
        th Active
    tbody
      tr
        td= user.name
        td= user.email
        td= user.active
  p= user.password
  p Bio: #{user.bio}
  hr
  form(action='/user/' + user.id , method='post')
    label(for='bioInput') Biography
    em Please tell us something about you
    textarea#bioInput.u-full-width(name='bioInput')= user.bio
    button.button-primary(type='submit') Update Profile